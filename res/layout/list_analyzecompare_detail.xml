<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lay_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_analyze_itemtype"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_itemtype" />

    <TextView
        android:id="@+id/tv_analyze_itemname"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_itemname" />

    <TextView
        android:id="@+id/tv_analyze_countcur"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_countcur" />

    <TextView
        android:id="@+id/tv_analyze_pricecur"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_itemprice" />

    <TextView
        android:id="@+id/tv_analyze_countprev"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_countprev" />

    <TextView
        android:id="@+id/tv_analyze_priceprev"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_marginRight="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:text="@string/txt_analyze_itemprice" />

</LinearLayout>