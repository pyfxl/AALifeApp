<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lay_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_card_detail"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:focusable="false"
        android:text="@string/txt_card_detail" />

    <TextView
        android:id="@+id/tv_card_name"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:focusable="false"
        android:text="@string/txt_card_name" />

    <TextView
        android:id="@+id/tv_card_money"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:ellipsize="marquee"
        android:focusable="false"
        android:text="@string/txt_card_money" />

    <TextView
        android:id="@+id/tv_card_moneyvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_zero"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_card_moneystart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_zero"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_card_delete"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_marginRight="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:focusable="false"
        android:text="@string/txt_day_delete" />

    <TextView
        android:id="@+id/tv_card_cardid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_card_id"
        android:visibility="gone" />

</LinearLayout>
