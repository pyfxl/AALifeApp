<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lay_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_rank_itemtype"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="1"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itemtype" />

    <TextView
        android:id="@+id/tv_rank_itemtypevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_rank_itemtype"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_rank_itemname"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itemname" />

    <TextView
        android:id="@+id/tv_rank_itemremark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_day_remark"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_rank_itembuydate"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itembuydate" />

    <TextView
        android:id="@+id/tv_rank_itemprice"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itemprice" />

    <TextView
        android:id="@+id/tv_rank_pricevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_zero"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lay_rank_select"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_marginRight="@dimen/list_border_size"
        android:layout_weight="1"
        android:background="@color/color_item_bg"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/cb_rank_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>
